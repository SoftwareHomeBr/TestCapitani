@model CatalogoDomain.PessoaModel

<div>
    <h4>PessoaModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PessoaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PessoaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Model.DataNascimento.ToString("dd-MMM-yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoCivil)
        </dd>
        @if (Model.parceiro != null)
        {
            <dt class="col-sm-2">
                Nome do Parceiro(a)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.parceiro.Nome)
            </dd>
            <dt class="col-sm-2">
                Data de Nascimento do Parceiro(a)
            </dt>
            <dd class="col-sm-10">
                @Model.parceiro.DataNascimento.ToString("dd-MMM-yyyy")
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edita", "PessoaEdit", new { id = Model.PessoaId }) |
    <a asp-action="Pessoas">Volta para a Lista</a>
</div>
